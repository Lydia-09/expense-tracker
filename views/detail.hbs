<div class="expenseForm">
  <h3 class="text-secondary mb-4 mt-3">支出記錄內容</h3>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label text-md-right pt-0 pr-1">名稱</label>
      <div class="col-sm-10">
        <p class="col-auto readonly">{{ record.name }}</p>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-sm-2 col-form-label text-md-right pt-0 pr-1">日期</label>
      <div class="col-sm-10">
        <p class="col-auto readonly">{{ record.date }}</p>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-sm-2 col-form-label text-md-right pt-0 pr-1">類別</label>
      <div class="col-sm-10">
        <p class="col-auto readonly">{{ record.categoryId.name }}</p>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-sm-2 col-form-label text-md-right pt-0 pr-1">金額</label>
      <div class="col-sm-10">
        <p class="col-auto readonly">{{ record.amount }}</p>
      </div>
  </div>
  <div class="d-flex buttonGroup mt-4">
    <a href="/records/{{ record._id }}/edit" class="btn btn-secondary mr-3" >修改</a>
    <form action="/records/{{ record._id }}/?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="btn btn-danger mr-3" >刪除</button>
    </form>
    <a href="/" class="btn btn-info" >back</a>
  </div>
</div>

