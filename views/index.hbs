<a href="./records/new" class="btn">Create</a>
<ul>
  {{#each records}}
  <li>
      <i class="{{this.categoryId.icon}}"></i>
      {{this.categoryId.title}}
      {{this.name}}, {{this.amount}}, {{this.date}}
      <a href="./records/{{ this._id }}">detail</a>
      <a href="./records/{{ this._id }}/edit">edit</a>
      <form action="./records/{{ this._id }}/?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit">delete</button>
      </form>
  </li>
  {{/each}}
</ul>