<div class="expenseForm">
  <h3 class="text-secondary mb-0 mt-3">新增支出記錄</h3>
  <p class="text-secondary"><small>( <span class="text-danger">*</span> 號為必填欄位 )</small></p>
  <form action="/records" method="POST">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label text-md-right pt-1 pr-1">名稱<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input type="text" class="col-auto pl-2" placeholder="請填入支出內容" id="name" name="name" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="date" class="col-sm-2 col-form-label text-md-right pt-1 pr-1">日期<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input type="date" class="pl-2" placeholder="" id="date" name="date" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" value="{{ today }}" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="categoryId" class="col-sm-2 col-form-label text-md-right pt-2 pr-1">類別<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <select class="form-control col-md-3 pl-2" id="categoryId" name="categoryId" required>
          <option value="" selected disabled>Select</option>
          {{#each categories}}
            <option value="{{ this._id }}">{{ this.name }}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="amount" class="col-sm-2 col-form-label text-md-right pt-1 pr-1">金額<span class="text-danger">*</span></label>
      <div class="col-sm-10">
        <input type="number" min="0" class="col-auto pl-2" placeholder="請填入支出金額" id="amount" name="amount" value="{{ record.amount }}" required>
      </div>
    </div>
    <div class="d-flex buttonGroup mt-4">
        <button type="submit" class="btn btn-secondary mr-3">新增支出</button>
        <a class="btn btn-info" href="/">back</a>
    </div>
  </form> 
</div>